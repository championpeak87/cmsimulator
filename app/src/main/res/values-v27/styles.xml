<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.DayNight">
		<!-- Customize your theme here. -->
		<item name="android:colorPrimary">@color/primary_color</item>
		<item name="android:colorPrimaryDark">@color/primary_color_dark</item>
		<item name="android:colorAccent">@color/primary_color</item>
		<item name="android:navigationBarColor">@color/primary_color</item>
		<item name="android:colorButtonNormal">@color/primary_color</item>
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:titleTextColor">@color/md_white_1000</item>
		<item name="android:tint">@color/md_white_1000</item>
		<item name="android:colorControlActivated">@color/primary_color</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
	</style>
	<style name="LoginTheme" parent="Theme.AppCompat.DayNight">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/md_white_1000</item>
		<item name="android:colorPrimaryDark">@color/primary_color_dark</item>
		<item name="colorAccent">@color/md_white_1000</item>
		<item name="android:navigationBarColor">@color/primary_color_light</item>
		<item name="android:colorButtonNormal">@color/md_white_1000</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:titleTextColor">@color/md_white_1000</item>
		<item name="android:windowBackground">@drawable/login_background</item>
		<item name="android:tint">@color/md_white_1000</item>
		<item name="android:colorControlActivated">@color/md_white_1000</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
	</style>
	<style name="MainMenuTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

		<item name="android:colorAccent">@color/primary_color</item>
		<item name="android:colorControlActivated">@color/primary_color</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
	</style>
	<style name="splashTheme" parent="Theme.AppCompat.DayNight">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:colorPrimary">@color/primary_color</item>
		<item name="android:colorPrimaryDark">@color/primary_color</item>
		<item name="android:colorAccent">@color/primary_color</item>
		<item name="android:windowBackground">@drawable/activity_splash</item>
		<item name="android:navigationBarColor">@color/primary_color</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
	</style>
</resources>