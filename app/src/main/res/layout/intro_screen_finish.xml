<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_gravity="center_vertical">
    <com.airbnb.lottie.LottieAnimationView android:layout_width="match_parent" android:layout_height="300dp"
                                           android:layout_gravity="center_horizontal"
                                           app:lottie_rawRes="@raw/confetti"
                                           app:lottie_loop="true"
                                           app:lottie_autoPlay="true" android:padding="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal" android:text="@string/everything_ready"
              android:textColor="@color/md_white_1000" android:layout_margin="15dp" android:textSize="25sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal" android:text="@string/lets_start"
              android:textColor="@color/md_white_1000" android:layout_margin="15dp" android:textSize="25sp"/>


</LinearLayout>