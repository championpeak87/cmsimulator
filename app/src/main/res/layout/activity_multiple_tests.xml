<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_multiple_tests_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/md_black_1000"
            android:contentDescription="@string/back"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_back_white_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageButton_multiple_tests_back"
            android:layout_toRightOf="@id/imageButton_multiple_tests_back"
            android:layout_toStartOf="@+id/imageButton_multiple_tests_menu"
            android:layout_toLeftOf="@+id/imageButton_multiple_tests_menu"
            android:background="@color/md_black_1000"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/grammar_multiple_tests"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/md_white_1000" />

        <ImageButton
            android:id="@+id/imageButton_multiple_tests_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/md_black_1000"
            android:contentDescription="@string/menu"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_menu_white_48dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/light_bulb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/grammar_multiple_tests_hint"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/boarder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_multiple_tests"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="@color/md_grey_600" />

        <LinearLayout
            android:id="@+id/linearLayout_multiple_tests_step_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp">

            <Button
                android:id="@+id/button_multiple_tests_test_all"
                style="@style/GrammarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/grammar_multiple_tests_test_all" />

            <Button
                android:id="@+id/button_multiple_tests_clear"
                style="@style/GrammarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/grammar_multiple_tests_clear" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>