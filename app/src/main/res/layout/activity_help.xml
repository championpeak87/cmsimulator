<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_help_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/md_black_1000"
            android:contentDescription="@string/back"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_back_white_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageButton_help_back"
            android:layout_toRightOf="@+id/imageButton_help_back"
            android:background="@color/md_black_1000"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/help"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/md_white_1000" />

    </RelativeLayout>

    <fragment android:name="fiitstu.gulis.cmsimulator.dialogs.GuideFragment"
              android:id="@+id/guide_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
</LinearLayout>