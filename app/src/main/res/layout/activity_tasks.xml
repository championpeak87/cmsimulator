<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/logged_user"
                  android:theme="@style/text_subheader"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="10dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="xlihan"
                  android:layout_marginLeft="20dp"
                  android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

        <Button
                android:id="@+id/button_tasks_find"
                android:text="@string/find_tasks"
                style="@style/TasksButtonStyle" />



        <Button
                android:id="@+id/button_tasks_new"
                android:text="@string/new_task"
                style="@style/TasksButtonStyle" />



        <Button
                android:id="@+id/button_tasks_load"
                android:text="@string/load_task"
                style="@style/TasksButtonStyle" />


        <Button
                android:id="@+id/button_tasks_examples"
                android:text="@string/example_tasks"
                style="@style/TasksButtonStyle" />

        <Button
                android:id="@+id/button_tasks_game"
                android:text="@string/tasks_game"
                style="@style/TasksButtonStyle" />
    </LinearLayout>
</LinearLayout>