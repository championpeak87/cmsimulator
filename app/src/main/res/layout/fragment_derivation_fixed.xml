<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/derivation_fixed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000" />

    <View
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="@color/md_white_1000" />

    <TextView
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/derivation"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000" />

    <TextView
        android:id="@+id/textView_fixed_derivation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        android:padding="8dp"/>

    <TextView
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/productions"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000" />

    <ScrollView
        android:id="@+id/scrollView_fixed_derivation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/textView_fixed_derivation_productions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>