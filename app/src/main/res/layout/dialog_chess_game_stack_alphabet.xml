<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent" android:layout_height="wrap_content"
                                            android:id="@+id/recyclerview_stack_alphabet" android:layout_margin="10dp" android:layoutAnimation="@anim/layout_animation"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <EditText android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/edittext_new_symbol" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:hint="@string/add_new_stack_symbol"/>
        <ImageButton android:id="@+id/imagebutton_add_new_stack_symbol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/baseline_check_circle_24" android:tint="@color/bootstrap_gray" style="?android:buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>