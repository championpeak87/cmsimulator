<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_black_1000"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/imageButton_bulk_test_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/md_black_1000"
                    android:contentDescription="@string/back"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_arrow_back_white_48dp" />

            <TextView
                    android:id="@+id/textView_bulk_test_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/imageButton_bulk_test_back"
                    android:layout_toRightOf="@+id/imageButton_bulk_test_back"
                    android:layout_toStartOf="@+id/linearLayout_bulk_test_header_buttons"
                    android:layout_toLeftOf="@+id/linearLayout_bulk_test_header_buttons"
                    android:background="@color/md_black_1000"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/md_white_1000" />


            <LinearLayout
                    android:id="@+id/linearLayout_bulk_test_header_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                <ImageButton
                        android:id="@+id/imageButton_bulk_test_task_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/md_black_1000"
                        android:contentDescription="@string/task_details"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:visibility="gone" />

                <ImageButton
                        android:id="@+id/imageButton_bulk_test_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/md_black_1000"
                        android:contentDescription="@string/menu"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_menu_white_48dp" />
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_bulk_test_scenarios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/button_bulk_test_add_test"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:text="@string/new_test" />

            <Button
                    android:id="@+id/button_bulk_test_run"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:text="@string/run_bulk_test" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout_bulktest_working"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>