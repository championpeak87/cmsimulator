<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_popup_main_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/new_machine"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_popup_main_new_finite_state_automatom"
        android:text="@string/finite_state_automaton"
        style="@style/newMachineButtonStyle" />

    <Button
        android:id="@+id/button_popup_main_new_pushdown_automaton"
        android:text="@string/pushdown_automaton"
        style="@style/newMachineButtonStyle" />

    <Button
        android:id="@+id/button_popup_main_new_linear_bounded_automaton"
        android:text="@string/linear_bounded_automaton"
        style="@style/newMachineButtonStyle" />

    <Button
        android:id="@+id/button_popup_main_new_turing_machine"
        android:text="@string/turing_machine"
        style="@style/newMachineButtonStyle" />

</LinearLayout>