<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/guide_heading"
        android:text="@string/guide_title_multiple_tests" />

    <TextView
        style="@style/guide_paragraph"
        android:text="@string/guide_multiple_tests_instruction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_menu_white_with_background_48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_menu" />
    </LinearLayout>

    <TextView
        style="@style/guide_subheading"
        android:text="@string/guide_title_multiple_tests_table"/>

    <TextView
        style="@style/guide_paragraph"
        android:text="@string/guide_multiple_test_table_instruction"/>

    <TextView
        style="@style/guide_subheading"
        android:text="@string/guide_title_multiple_tests_evaluation"/>

    <TextView
        style="@style/guide_paragraph"
        android:text="@string/guide_multiple_tests_evaluation_instruction"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_checkbox_checked_green"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_accept_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_checkbox_checked_red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_accept_wrong" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_checkbox_indeterminate_green"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_reject_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_checkbox_indeterminate_red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_reject_wrong" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            style="@style/guide_image"
            android:src="@drawable/ic_checkbox_unchecked_red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_multiple_tests_default_wrong" />
    </LinearLayout>

    <TextView
        style="@style/guide_see_also" />

    <LinearLayout
        android:id="@+id/linearLayout_guide_grammar_link"
        style="@style/guide_content_container">
        <ImageView
            style="@style/guide_content_bullet" />

        <TextView
            style="@style/guide_content_text"
            android:text="@string/guide_title_grammar_definition" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_guide_grammar_simulation_link"
        style="@style/guide_content_container">
        <ImageView
            style="@style/guide_content_bullet" />

        <TextView
            style="@style/guide_content_text"
            android:text="@string/guide_title_grammar_simulation" />
    </LinearLayout>

</LinearLayout>