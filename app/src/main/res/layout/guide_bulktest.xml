<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            style="@style/guide_heading"
            android:text="@string/guide_title_bulk_test_activity"/>

    <TextView
            style="@style/guide_paragraph"
            android:text="@string/guide_bulk_test_introduction"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
        <ImageView
                style="@style/guide_image"
                android:src="@drawable/ic_menu_white_with_background_48dp" android:tint="@null"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guide_bulk_test_menu"/>
    </LinearLayout>

    <TextView
            style="@style/guide_paragraph"
            android:text="@string/guide_bulk_test_results"/>

    <TextView
            style="@style/guide_paragraph"
            android:text="@string/guide_bulk_test_to_simulation"/>

    <TextView
            style="@style/guide_paragraph"
            android:text="@string/guide_bulk_test_buttons"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
        <ImageView
                style="@style/guide_image"
                android:src="@drawable/edit" android:tint="@color/bootstrap_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guide_bulk_test_edit_button"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
        <ImageView
                style="@style/guide_image"
                android:src="@drawable/remove" android:tint="@color/bootstrap_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guide_bulk_test_remove_button"/>
    </LinearLayout>

    <TextView
            style="@style/guide_see_also"/>

    <LinearLayout
            android:id="@+id/linearLayout_guide_settings_link"
            style="@style/guide_content_container">
        <ImageView
                style="@style/guide_content_bullet"
        android:tint="@color/bootstrap_gray"/>

        <TextView
                style="@style/guide_content_text"
                android:text="@string/guide_title_settings"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout_guide_tasks_link"
            style="@style/guide_content_container">
        <ImageView
                style="@style/guide_content_bullet"
                android:tint="@color/bootstrap_gray"/>

        <TextView
                style="@style/guide_content_text"
                android:text="@string/guide_title_tasks"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout_guide_simulation_link"
            style="@style/guide_content_container">
        <ImageView
                style="@style/guide_content_bullet" android:tint="@color/bootstrap_gray"/>

        <TextView
                style="@style/guide_content_text"
                android:text="@string/guide_title_simulation_activity"/>
    </LinearLayout>
</LinearLayout>