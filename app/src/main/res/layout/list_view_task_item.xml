<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview_task"
									xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp" xmlns:app="http://schemas.android.com/tools"
                                    android:layout_margin="5dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="10dp">


	<TextView android:id="@+id/textview_task_name"
	          android:layout_width="match_parent" android:layout_height="match_parent"
	          android:gravity="center" android:textSize="20sp"/>


	<android.support.constraint.ConstraintLayout
			android:id="@+id/task_top_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:background="@color/primary_color">
		<TextView android:id="@+id/textview_automata_type"
		          android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:gravity="center_vertical"
		          android:lines="2"
		          android:textColor="@color/md_white_1000" android:padding="10dp" android:textAllCaps="true"
		          android:textStyle="bold" app:layout_constraintLeft_toLeftOf="parent"
		          app:layout_constraintTop_toTopOf="parent"/>
	</android.support.constraint.ConstraintLayout>

	<LinearLayout android:id="@+id/task_bottom_bar"
			      android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:gravity="right" android:layout_gravity="bottom"
	              android:background="@color/primary_color_light">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:text="Nápoveda"
		        android:layout_gravity="right" style="?android:buttonBarButtonStyle"
		        android:textColor="@color/md_white_1000"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:id="@+id/button_popup_main_example1_finite_state_automatom"
		        android:text="Spustiť" android:onClick="onExampleStart"
		        android:layout_gravity="right" style="?android:buttonBarButtonStyle"
		        android:textColor="@color/md_white_1000"/>
	</LinearLayout>
</android.support.v7.widget.CardView>