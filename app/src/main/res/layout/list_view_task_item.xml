<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview_task"
									xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp" xmlns:app="http://schemas.android.com/tools"
                                    android:layout_margin="5dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="10dp">





	<android.support.constraint.ConstraintLayout
			android:id="@+id/task_top_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		<TextView android:id="@+id/textview_automata_type"
		          android:layout_width="match_parent" android:layout_height="wrap_content"
		          android:gravity="center_vertical"
		          android:lines="2"
		          android:elevation="20dp"
		          android:background="@color/primary_color"
		          android:textColor="@color/md_white_1000" android:padding="10dp" android:textAllCaps="true"
		          android:textStyle="bold" app:layout_constraintLeft_toLeftOf="parent"
		          app:layout_constraintTop_toTopOf="parent"/>
		<TextView android:id="@+id/textview_automata_type_deterministic"
		          android:layout_width="match_parent" android:layout_height="wrap_content"
		          android:gravity="center_vertical"
		          android:background="@color/primary_color_light"
		          android:lines="1"
		          android:textColor="@color/md_white_1000" android:padding="10dp" android:textAllCaps="true"
		          android:textStyle="bold" app:layout_constraintLeft_toLeftOf="parent"
		          card_view:layout_constraintTop_toBottomOf="@id/textview_automata_type"/>

	</android.support.constraint.ConstraintLayout>

	<TextView android:id="@+id/textview_task_name"
	          android:layout_marginTop="95dp"
	          android:layout_width="match_parent" android:layout_height="100dp"
	          android:elevation="10dp"
	          android:gravity="center" android:textSize="20sp" card_view:layout_constraintTop_toBottomOf="@id/textview_automata_type_deterministic"/>

	<LinearLayout android:id="@+id/task_bottom_bar" android:elevation="50dp"
			      android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:gravity="right" android:layout_gravity="bottom"
	              android:background="@color/primary_color_light">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:text="@string/task_hint"
		        android:id="@+id/button_task_hint"
		        android:layout_gravity="right" style="?android:buttonBarButtonStyle"
		        android:textColor="@color/md_white_1000" android:textSize="13sp"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:id="@+id/button_start_task"
		        android:text="@string/start_task" android:onClick="onExampleStart" android:textSize="13sp"
		        android:layout_gravity="right" style="?android:buttonBarButtonStyle"
		        android:textColor="@color/md_white_1000"/>
	</LinearLayout>
</android.support.v7.widget.CardView>