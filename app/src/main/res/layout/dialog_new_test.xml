<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="@color/md_white_1000">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/input_word"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_popup_edit_test_input_tape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <CheckBox
                android:id="@+id/checkBox_popup_new_test_set_output_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="false"
                android:text="@string/set_output_word"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

        <TextView
                android:id="@+id/textView_popup_new_test_output_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/output_word"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />


        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_popup_edit_test_output_tape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"  />
    </LinearLayout>
</ScrollView>