<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
android:layout_marginLeft="20dp">

    <TextView
        android:id="@+id/textView_formal_spec_title"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/formalSpecTextStyle" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/linearLayout_formal_spec_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/textView_formal_spec_state"
                    style="@style/formalSpecTextStyle" />

            <TextView
                    android:id="@+id/textView_formal_spec_input_alphabet"
                    style="@style/formalSpecTextStyle" />

            <TextView
                    android:id="@+id/textView_formal_spec_tape_alphabet"
                    style="@style/formalSpecTextStyle" />

            <TextView
                    android:id="@+id/textView_formal_spec_initial_state"
                    style="@style/formalSpecTextStyle" />

            <TextView
                    android:id="@+id/textView_formal_spec_initial_stack_symbol"
                    style="@style/formalSpecTextStyle" />

            <TextView
                    android:id="@+id/textView_formal_spec_final_state"
                    style="@style/formalSpecTextStyle" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>