<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:keepScreenOn="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_black_1000"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/imageButton_launched_task_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/md_black_1000"
                android:contentDescription="@string/back"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_arrow_back_white_48dp" />

        <!--textview text will be set programmatically-->
        <TextView
                android:id="@+id/textView_launched_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageButton_launched_task_back"
                android:layout_toLeftOf="@+id/imageButton_launched_task_menu"
                android:layout_toRightOf="@+id/imageButton_launched_task_back"
                android:layout_toStartOf="@+id/imageButton_launched_task_menu"
                android:background="@color/md_black_1000"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_white_1000" />

        <ImageButton
                android:id="@+id/imageButton_launched_task_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/md_black_1000"
                android:contentDescription="@string/menu"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_menu_white_48dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_launched_task_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/textView_launched_task_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <Button
            android:id="@+id/button_launched_task_stop"
            android:text="@string/stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal" />

</LinearLayout>